<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="550.0" prefWidth="800.0" stylesheets="@MyStyles.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="momsfood.FXMLandControllers.ForgotPasswordController">
   <children>
      <GridPane layoutX="130.0" layoutY="63.0" prefHeight="392.0" prefWidth="565.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label prefHeight="30.0" prefWidth="150.0" stylesheets="@MyStyles.css" text="Reset Password" GridPane.columnIndex="1" />
            <Label text="Username:" GridPane.rowIndex="1" />
            <Label text="New Password:" GridPane.rowIndex="2" />
            <Label text="Confirm Password:" GridPane.rowIndex="3" />
            <TextField fx:id="usernameTextField" styleClass="pink" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Button fx:id="confirmButton" mnemonicParsing="false" onAction="#confirmButtonListener" prefHeight="35.0" prefWidth="137.0" styleClass="red" text="Confirm" GridPane.columnIndex="2" GridPane.rowIndex="4" />
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#backButtonListener" prefHeight="35.0" prefWidth="137.0" styleClass="red" text="Back" GridPane.columnIndex="2" GridPane.rowIndex="5" />
            <PasswordField fx:id="passwordTextField" styleClass="pink" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <PasswordField fx:id="confirmPasswordTextField" styleClass="pink" stylesheets="@MyStyles.css" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         </children>
      </GridPane>
   </children>
</AnchorPane>
